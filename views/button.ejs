<%- include('header'); %>

<div class="container">
	<div class="row mt-1 text-end">
		<div class="col">
			<a href="/tasklist">Add Tasks</a>
		</div>
	</div>
	<div class="row text-center mt-3">
		<div class="col">
			<h1>The Task Button!</h1>
			<p class="h6">If It Takes More Than Two Minutes, It Goes Here</p>
		</div>
	</div>
	<div class="row text-center mt-4">
		<div class="col">
			<input id="id" name="id" type="hidden">
			<button id="get-task" class="btn btn-large btn-primary" type="button">PRES BUTAN</button>
		</div>
	</div>
	<div id="task-panel" class="row text-center d-none mt-5">
		<div class="offset-md-3 col-md-6">
			<p class="h6">
				<span class="fw-bolder">Your Mission:</span>
				<span id="task"></span>
			</p>
			<div class="mt-3">
				<button id="i-did-this" name="i-did-this" type="button" class="btn btn-sm btn-success">I did this!</button>
			</div>
		</div>
	</div>
	<div id="good-job-panel" class="rows text-center d-none mt-4">
		<div class="offset-md-3 col-md-6">
			<p class="h5">Good job!</p>
		</div>
	</div>
	<div id="all-done-panel" class="rows text-center d-none mt-4">
		<div class="offset-md-3 col-md-6">
			<p class="h5">All tasks complete. Woot!</p>
		</div>
	</div>
</div>

<script src="/js/button.js" integrity="sha384-<%= integrities.button %>" crossorigin="anonymous"></script>

<%- include('footer'); %>
