<%- include('header'); -%>

<div class="container">
	<div class="row text-end mt-1">
		<div class="col">
			<a href="/">The Task Button</a>
		</div>
	</div>
	<div class="row text-center mt-3">
		<div class="col">
			<h1>Add New Task</h1>
		</div>
	</div>
	<div class="row text-center mt-2">
		<div class="offset-3 col-6">
			<div class="input-group">
				<input id="new-task" class="form-control" type="text" placeholder="New task name">
				<button id="add" class="forum-control btn btn-primary" type="button">Add</button>
			</div>
		</div>
	</div>
	<div id="tasks-panel" class="mt-5 <%= tasks.length > 0 ? '' : 'd-none' %>">
		<% for (const task of tasks) { %>
			<%- include('partials/_task', {task}); -%>
		<% } %>
	</div>
	<div id="no-tasks-panel" class="row text-center mt-5 <%= tasks.length > 0 ? 'd-none' : '' %>">
		<div class="col">
			<h5 class="text-muted">No tasks have been added<h5>
		</div>
	</div>
</div>

<script src="/js/tasklist.js" integrity="sha384-<%= integrities.tasklistJs %>" crossorigin="anonymous"></script>

<%- include('header'); -%>
